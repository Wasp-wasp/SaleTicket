<Window x:Class="SaleTicket.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleTicket"
        mc:Ignorable="d"
        PreviewTextInput="Window_PreviewTextInput"
        MouseMove="Window_MouseMove"
        PreviewMouseDown="Window_PreviewMouseDown"
        KeyDown="Window_KeyDownAndUp"
        KeyUp="Window_KeyDownAndUp"
        ResizeMode="NoResize"
        Title="Окно покупки" Height="900" Width="1200">
    <Grid>
        <StackPanel>
            <Grid>
                <Button VerticalAlignment="Center" HorizontalAlignment="Left" Margin=" 10 10 0 0" Click="Button_Click" Content="Выход"/>
            </Grid>
            <ContentControl x:Name="PageChange"/>
        </StackPanel>
    </Grid>
</Window>
